@model Product
@{
    Layout = "_Index1";

}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form  method ="post" asp-action="AddProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input type="text"
                          
                           asp-for="Name"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea type="text"
                             
                              asp-for="Description"
                              class="form-control"
                              placeholder=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Product Quantity</label>
                    <input type="number"
                          
                           asp-for="Quantity"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input type="number"
                        
                       
                           asp-for="Price"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="EnableSize" class="form-check-input" type="checkbox" value="" id="" />
                        <label asp-for="EnableSize" class="form-check-label" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label  asp-for="CompanyId" class="form-label">company</label>
                    <select class="form-select "
                            
                            asp-for="CompanyId">
                        <option selected>Select one</option>
                        <option value="1">nike</option>
                        <option value="2">adidas</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>


                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>